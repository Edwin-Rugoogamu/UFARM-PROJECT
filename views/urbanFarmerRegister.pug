doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Urban Farmer
  link(rel='stylesheet' href='../bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='../style.css')
.uFarmer3
  #uFarmer.container-fluid
    .row
      .col-xs-12.col-lg-3.col-md-3
        a.send(href='../Main/fontPage.html')
          h1 UFARM 
        p.far2 Register Urban Farmer to grant them access.
      #uFarmer2.col-xs-12.col-lg-6.col-md-6
        form(action='./urbanFarmerRegister' onsubmit='' method='POST')
          h3 REGISTRATION FORM 
          // firstName
          div
            label(for='') First Name
            br
            input(type='text' style='width: 100%' name='firstName')
            br
          // second name
          div
            label(for='') Second Name
            br
            input(type='text' style='width: 100%' name=' secondName')
            br
          // email
          // unique FO number
          div
            input#foNumber(type='password' placeholder='password' style='width: 100%' name='password')
            br
            small#error4
          div
            label(for='email') Email
            input(type='text' name='email' style='width: 100%')
          // gender
          div
            label(for='') Male
            input(type='radio' name='gender' value='male')
            label(for='') Female
            input(type='radio' name='gender' value='female')
            br
          // date of registration
          div
            label(for='') Date of registration
            br
            input(type='date' style='width: 100%' name='DOR')
            br
          // date of birth
          div
            label(for='') Date of Birth
            br
            input(type='date' style='width: 100%' name='dobirth')
            br
          // role
          div
            label(for='role') Role
            br
            select(name='role')
              option(value='urbanfarmer') Urban Farmer
          div
            // personal number
            label(for='') Personal No.
            br
            input(type='number' name='phonenumber' id='' style='width: 100%')
            br
            label(for='') Other No.
            br
            input(type='number' name='othernumber' id='' style='width: 100%')
            br
          // nin
          div
            input(type='text' placeholder='NIN number' name='ninNumber')
            br
          // ward
          .wardclass
            label(for='') Select user Ward
            br
            select#users.users(name='user')
              option(value='ward1' name='ward1') Ward 1
              option(value='ward2' name='ward2') Ward 2
              option(value='ward3' name='ward3') Ward 3
              option(value='ward4' name='ward4') Ward 4
          // submit
          button#UFregister.sub(type='submit' value='register') Submit
      .col-xs-12.col-lg-3.col-md-3 Right column
script(src='../index.js')
script(src='../bootstrap/js/bootstrap.bundle.js')
